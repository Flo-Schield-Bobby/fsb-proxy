# editorconfig.org
root = true

[*]
indent_style = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_style = space
indent_size = 4

# Spaces in coffee
[**.coffee]
indent_style = tab
indent_size = 4

[**.js]
indent_style = tab
indent_size = 4

# Tabs in sass
[{**.sass,**.scss}]
indent_style = tab
indent_size = 4

[**.css]
indent_style = tab
indent_size = 2

[{**.php,**.php.template,**.twig}]
indent_style = tab
indent_size = 4

[**.html]
indent_style = tab
indent_size = 4
